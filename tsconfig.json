{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "importHelpers": true,
    "moduleResolution": "Node",
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": false,
    "skipLibCheck": true,
    "strict": false
  },
  "include": [
    "ts/**/*",
  ],
  "exclude": [
    "node_modules",                  // Exclude node_modules folder
    "**/*.spec.ts"                   // Exclude test files if applicable
  ]
}
